<log4net>
    <!-- API appender -->
    <appender name="osu!api" type="log4net.Appender.RollingFileAppender">
        <file value="log/osu!api.log" />
        <appendToFile value="true" />
        <maximumFileSize value="100KB" />
        <maxSizeRollBackups value="2" />

        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss} %-5level - %message%newline" />
        </layout>
    </appender>

    <!-- Scores appender -->
    <appender name="osu!scores" type="log4net.Appender.RollingFileAppender">
        <file value="log/osu!scores.log" />
        <appendToFile value="true" />
        <maximumFileSize value="100KB" />
        <maxSizeRollBackups value="2" />

        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss} %-5level - %message%newline" />
        </layout>
    </appender>

    <!-- IRC appender -->
    <appender name="osu!irc" type="log4net.Appender.RollingFileAppender">
        <file value="log/osu!irc.log" />
        <appendToFile value="true" />
        <maximumFileSize value="100KB" />
        <maxSizeRollBackups value="2" />

        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss} %-5level - %message%newline" />
        </layout>
    </appender>

  <!-- Discord appender -->
  <appender name="osu!discord" type="log4net.Appender.RollingFileAppender">
    <file value="log/osu!discord.log" />
    <appendToFile value="true" />
    <maximumFileSize value="100KB" />
    <maxSizeRollBackups value="2" />

    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss} %-5level - %message%newline" />
    </layout>
  </appender>

    <!-- UI appender -->
    <appender name="osu!ui" type="log4net.Appender.RollingFileAppender">
        <file value="log/osu!ui.log" />
        <appendToFile value="true" />
        <maximumFileSize value="100KB" />
        <maxSizeRollBackups value="2" />

        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss} %-5level - %message%newline" />
        </layout>
    </appender>

    <!-- API Logger -->
    <logger name="osu!api">
        <level value="INFO" />
        <appender-ref ref="osu!api" />
    </logger>

    <!-- Scores Logger -->
    <logger name="osu!scores">
        <level value="INFO" />
        <appender-ref ref="osu!scores" />
    </logger>

    <!-- IRC Logger -->
    <logger name="osu!irc">
        <level value="INFO" />
        <appender-ref ref="osu!irc" />
    </logger>

    <!-- UI Logger -->
    <logger name="osu!ui">
        <level value="INFO" />
        <appender-ref ref="osu!ui" />
    </logger>
</log4net>
